#:import SmartTileWithStar kivymd.imagelists.SmartTileWithStar
#:import SmartTileWithLabel kivymd.imagelists.SmartTileWithLabel
#:import MDDropdownMenu kivymd.menus.MDDropdownMenu
#:import MDFillRoundFlatIconButton kivymd.button.MDFillRoundFlatIconButton
<OpenComicScreen>
    name: 'open_comicscreen'
    StackLayout:
        id:main_stack
        orientation: 'lr-tb'
        padding: dp(10), dp(10)
        spacing: dp(4)
        CustomMDFillRoundFlatIconButton:
            id:prev_button
            text: "Prev Page"
            icon: "arrow-left"
            width: dp(150)
            padding: dp(10), dp(10)
            center_x:main_stack.x + (self.width)
            disabled: True
            opacity: 0
            on_release:root.get_page(self)
        MDFlatButton:
            id:page_count
            width: dp(10)
            text: '1-50'
            center_x:main_stack.center_x
            disabled:True
            opacity: 0
        CustomMDFillRoundFlatIconButton:
            id:next_button
            text: 'Next Page'
            icon: "arrow-right"
            width: dp(150)
            padding: dp(10), dp(10)
            disabled: True
            opacity: 0
            center_x:main_stack.right - (self.width)
            on_release:root.get_page(self)
            

        ScrollView:
            do_scroll_x: False
            id: main_scroll
            padding: dp(10), dp(10)
            GridLayout:
                id: main_grid
                row_force_default: True
                size_hint_y: None
                size_hint_x: None
                height: self.minimum_height
                padding: dp(10), dp(10)
                spacing: dp(4)
                col_default_width:170
                row_default_height:250
        
        MDFlatButton:
            id:spacer
            width: dp(10)
            disabled:False
            icon: "arrow-right"



<MySmartTileWithLabel@SmartTileWithLabel>
    size: (dp(160),dp(240))
    mipmap: True
    font_style: 'Subtitle1'
    on_release:
        if self.do_action is 'read': self.open_comic()
        else: MDDropdownMenu(items=root.menu_items, width_mult=2).open(self)
