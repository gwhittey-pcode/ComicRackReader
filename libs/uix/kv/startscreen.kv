#:import MDToolbar kivymd.toolbar.MDToolbar
#:import NavDrawer libs.uix.baseclass.navdrawer.NavDrawer
#:import License libs.uix.baseclass.license.License
#:import BaseScreen libs.uix.baseclass.basescreen.BaseScreen
#:import About libs.uix.baseclass.about.About
#:import ReadingListScreen libs.uix.baseclass.readinglistscreen.ReadingListScreen
#:import ComicRackListScreen libs.uix.baseclass.comicracklistscreen.ComicRackListScreen
#:import OpenComicScreen libs.uix.baseclass.open_comics_screen.OpenComicScreen
<StartScreen>
    orientation: 'vertical'

    NavDrawer:
        id: nav_drawer

        BoxLayout:
            id: mdBox
            orientation: 'vertical'
            spacing: dp(5)
            MDToolbar:
                id: action_bar
                background_color: app.theme_cls.primary_color
                title: app.title
                # ['menu', lambda x: nav_drawer._toggle(),]
                left_action_items: [['home', lambda x: app.switch_base_screen()], ['settings', lambda x: app.open_settings()],  ['fullscreen',lambda x: app.toggle_full_screen()]]
                elevation: 10
                md_bg_color: app.theme_cls.primary_color
                right_action_items:[['view-list', lambda x: app.switch_lists_screen()], ['library-books', lambda x: app.switch_readinglists_screen()], ['book-open-variant', lambda x: app.switch_open_comics_screen()]]
            ScreenManager:
                id: manager

                BaseScreen:
                    id: base

                License:
                    id: license
                
                About:
                    id: about

                ReadingListScreen:
                    id: readinglistscreen

                ComicRackListScreen:
                    id: comicracklistscreen
                
                OpenComicScreen
                    id: open_comicscreen