<StartScreen>
    name:'startscreen'
    orientation: 'vertical'


    BoxLayout:
        id: mdBox
        orientation: 'vertical'
        spacing: dp(5)
        MDToolbar:
            id: action_bar
            background_color: app.theme_cls.primary_color
            title: app.title
            # ['menu', lambda x: nav_drawer._toggle(),]
            left_action_items: []
            elevation: 10
            md_bg_color: app.theme_cls.primary_color
            right_action_items:[]
        ScreenManager:
            id: manager

            BaseScreen:
                id: base

            License:
                id: license
            
            About:
                id: about

            ServerReadingListsScreen:
                id: server_readinglists_screen
            
            ServerComicBookScreen:
                id: comic_book_screen

            ServerListsScreen:
                id: server_lists_screen
                
            LocalListsScreen:
                id:local_lists_screen

            LocalReadingListsScreen:
                id:local_readinglists_screen


