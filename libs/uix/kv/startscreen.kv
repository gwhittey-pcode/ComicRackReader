#:import MDToolbar kivymd.toolbar.MDToolbar
#:import NavDrawer libs.uix.baseclass.navdrawer.NavDrawer
#:import License libs.uix.baseclass.license.License
#:import BaseScreen libs.uix.baseclass.basescreen.BaseScreen
#:import About libs.uix.baseclass.about.About
#:import ReadingListScreen libs.uix.baseclass.readinglistscreen.ReadingListScreen
#:import ComicRackListScreen libs.uix.baseclass.comicracklistscreen.ComicRackListScreen

<StartScreen>
    orientation: 'vertical'

    NavDrawer:
        id: nav_drawer

        BoxLayout:
            id: mdBox
            orientation: 'vertical'
            spacing: dp(5)
            MDToolbar:
                id: action_bar
                background_color: app.theme_cls.primary_color
                title: app.title
                left_action_items: [['menu', lambda x: nav_drawer._toggle()]]
                elevation: 10
                md_bg_color: app.theme_cls.primary_color
                right_action_items:[['settings', lambda x: app.open_settings()],['book-open-variant', lambda x: app.open_comicScreen()],['beer', lambda x: app.remove_action_bar()],['book-open-variant', lambda x: app.add_action_bar()]]
            ScreenManager:
                id: manager

                BaseScreen:
                    id: base

                License:
                    id: license
                
                About:
                    id: about


                
                
                ReadingListScreen:
                    id: readinglistscreen

                ComicRackListScreen:
                    id: comicracklistscreen
