#:import SmartTileWithStar kivymd.imagelists.SmartTileWithStar
#:import SmartTileWithLabel kivymd.imagelists.SmartTileWithLabel

<ComicBookScreen>:
    carousel_id: None
    max_height:self.max_height
    size: root.size
    name: 'comic_book_screen'
    FloatLayout:
        size: root.size
        id: comic_screen_float
        ComicCarousel:
            id: comic_book_carousel
    #top control taps
        ComicBookPageControlButton:
            id: top_left
            location: 'top_left'
            pos_hint: {'x': .0000000001, 'y': .85}
            text: "Top Left"
            size_hint: .2, .20
           
            on_release: self.click()
        ComicBookPageControlButton:
            id: top_center
            location: 'top_center'
            pos_hint: {'x': .3, 'y': .85}
            text: 'Top Center'
            size_hint: .4, .20
           
            on_release: self.click()
        ComicBookPageControlButton:
            id: top_right
            location: 'top_right'
            pos_hint: {'x': .8, 'y': .85}
            text: "Top Right"
            size_hint: .2, .20
           
            on_release: self.click()
    #middle control taps
        ComicBookPageControlButton:
            id: middle_left
            location: 'middle_left'
            pos_hint: {'x': .0000000001, 'y': .5}
            text: "Middle Left"
            size_hint: .12, .1
           
            on_release: self.click()
        ComicBookPageControlButton:
            id: middle_center
            location: 'middle_center'
            pos_hint: {'x': .4, 'y': .5}
            text: 'Middle Center'
            size_hint: .2, .20
           
            on_release: self.click()
        ComicBookPageControlButton:
            id: middle_right
            location: 'middle_right'
            pos_hint: {'x': .9, 'y': .5}
            text: "Middle Right"
            size_hint: .12, .10
           
            on_release: self.click()

    #bottom control taps
        ComicBookPageControlButton:
            id: bottom_left
            location: 'bottom_left'
            pos_hint: {'x': .0000000001, 'y': .0001}
            text: "Bottom Left"
            size_hint: .2, .2
           
            on_release: self.click()

        ComicBookPageControlButton:
            id: bottom_center
            location:'bottom_center'
            pos_hint: {'x': .3, 'y': .0001}
            text: 'Botttom Center'
            size_hint: .4, .2
           
            on_release: self.click()

        ComicBookPageControlButton:
            id: bottom_right
            location: 'bottom_right'
            pos_hint: {'x': .8, 'y': .0001}
            text: "Bottom Right"
            size_hint: .2, .2
            on_release: self.click()

        ComicBookPageControlButton:
            pos_hint: {'x': .6, 'y': .6}
            text: 'Open Random'
            size_hint: .1, .1

            on_release: root.load_random_comic()

<ComicBookPageControlButton>
    opacity: .5
   

<ThumbPopPageInnerGrid>:
    cols: 1
    rows: 2
    size_hint: (None,None)
    size: (dp(120),dp(180))
    spacing: 5
<ThumbPopPageImage>:
    allow_stretch: True
    size: (dp(120),dp(180))
    size_hint: (None, None)
<ThumbPopPagebntlbl>:
    size_hint: (1,None)
    height : 15
    text_color: (0,0,0)
    background_color: (1,1,1,.5)
    
<ComicThumbScroll>:
    size_hint: (1,1)
    do_scroll_x: True
    do_scroll_y: False
    id: page_thumb_scroll

<CommonComicsScroll>:
    size_hint: (1,.7)
    do_scroll_x: True
    do_scroll_y: False
<CommonComicsOuterGrid>:
    rows: 1
    size_hint: (None,None)
    spacing: 5
    padding_horizontal: 5
<CommonComicsCoverInnerGrid>:
    cols: 1
    rows: 2
    size_hint: (None,None)
    size: (dp(120),dp(180))
    spacing: 5
<CommonComicsCoverImage>:
    allow_stretch: True

    size: (dp(120),dp(180))
    size_hint: (None, None)
<CommonComicsCoverLabel>:
    font_style:			'Body1'
    size_hint:			None, None
    font_size:          '10sp'
    height:				self.texture_size[1]
    text_size:			self.width, None
    halign:				'center'
    text_color: (0,0,0)
    background_color: (1,1,1,.5)