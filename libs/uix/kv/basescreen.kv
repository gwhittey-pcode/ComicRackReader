<BaseScreen>:
    name: 'base'
    password: app.password
    username: app.username
    base_url: app.base_url
    api_key: app.api_key
    ScrollView:
        size_hint_x: None
        width: box.width
        pos_hint: {'center_x': .5}
        bar_width: 0

        BoxLayout:
            id: box
            padding: dp(10)
            size_hint: None, None
            size: self.minimum_size
            spacing: dp(10)
            orientation: 'vertical'
            pos_hint: {'center_x': .5}

            BoxLayout:
                size_hint: None, None
                width: self.minimum_width
                height: dp(56)
                spacing: '10dp'

                MDFillRoundFlatIconButton:
                    icon: 'server'
                    text: 'Open ComicRackAPIServer \nReadingLists'
                    height: dp(50)
                    opposite_colors: True
                    elevation_normal: 8
                    on_press: app.switch_server_lists_screen()

                MDFillRoundFlatIconButton:
                    icon: 'login'
                    text: 'Open Login'
                    height:dp(50)
                    opposite_colors: True
                    elevation_normal: 8
                    md_bg_color: app.theme_cls.primary_color
                    #on_press:app.show_action_bar()
                    on_press: root.open_popup()

                MDFillRoundFlatIconButton:
                    icon: 'folder-sync'
                    text: 'Open Sync Lists'
                    height:dp(50)
                    opposite_colors: True
                    elevation_normal: 8
                    on_press: app.switch_lists_screen()
            BoxLayout:
                size_hint: None, None
                width: self.minimum_width
                height: dp(56)
                spacing: '10dp'

                MDFillRoundFlatIconButton:
                    icon: 'file-image'
                    text: 'Open File'
                    height:dp(50)
                    opposite_colors: True
                    elevation_normal: 8
                    on_press: app.file_manager_open()
            MDLabel:
                id: last_comic_label
                text: 'Last Comic Loaded' 
                size_hint_y: None
                height: self.texture_size[1]
                font_style: 'Caption'
                theme_text_color: 'Primary'
                markup: True
                halign: 'center'
                text_size: self.width - 20, None
            GridLayout:
                id: main_grid
                row_force_default: True
                size_hint_y: None
                size_hint_x: None
                height: self.minimum_height
                padding: dp(10), dp(10)
                spacing: dp(4)
                col_default_width:app.comic_thumb_width
                row_default_height:app.comic_thumb_height
                

